<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text|textPersonName"
            android:text="Player 1: 0"
            android:ems="10"
            android:background="@null"
            android:id="@+id/player_1_text"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text|textPersonName"
            android:text="Player 2: 0"
            android:ems="10"
            android:background="@null"
            android:id="@+id/player_2_text"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="56dp" android:layout_marginStart="16dp"/>
    <Button
            android:text="RESET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reset_button" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="00"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_00" android:layout_marginTop="92dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_01"
            android:textSize="45sp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintBottom_toTopOf="@+id/button_10"/>
    <Button
            android:text="01"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="45sp"
            android:id="@+id/button_01" android:layout_marginTop="92dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_02"
            app:layout_constraintStart_toEndOf="@+id/button_00" app:layout_constraintBottom_toTopOf="@+id/button_11"/>
    <Button
            android:text="02"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="45sp"
            android:id="@+id/button_02" android:layout_marginTop="92dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_01"
            app:layout_constraintBottom_toTopOf="@+id/button_12"/>
    <Button
            android:text="10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_10"
            android:textSize="45sp"
            app:layout_constraintTop_toBottomOf="@+id/button_00" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_11" app:layout_constraintBottom_toTopOf="@+id/button_20"/>
    <Button
            android:text="11"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_11"
            android:textSize="45sp"
            app:layout_constraintTop_toBottomOf="@+id/button_01" app:layout_constraintEnd_toStartOf="@+id/button_12"
            app:layout_constraintStart_toEndOf="@+id/button_10" app:layout_constraintBottom_toTopOf="@+id/button_21"/>
    <Button
            android:text="12"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_12"
            android:textSize="45sp"
            app:layout_constraintTop_toBottomOf="@+id/button_02" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_11" app:layout_constraintBottom_toTopOf="@+id/button_22"/>
    <Button
            android:text="20"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_20"
            android:textSize="45sp"
            app:layout_constraintTop_toBottomOf="@+id/button_10" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_21"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="21"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_21"
            android:textSize="45sp"
            app:layout_constraintTop_toBottomOf="@+id/button_11" app:layout_constraintEnd_toStartOf="@+id/button_22"
            app:layout_constraintStart_toEndOf="@+id/button_20"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="22"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_22"
            android:textSize="45sp"
            app:layout_constraintTop_toBottomOf="@+id/button_12"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/button_21"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>